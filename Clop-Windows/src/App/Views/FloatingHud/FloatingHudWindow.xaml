<Window x:Class="ClopWindows.App.Views.FloatingHud.FloatingHudWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:loc="clr-namespace:ClopWindows.App.Localization"
    xmlns:viewModels="clr-namespace:ClopWindows.App.ViewModels"
        Title="Clop Floating HUD"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        ShowActivated="False"
        Topmost="True"
        Width="360"
        MinHeight="100"
        Focusable="False"
        SnapsToDevicePixels="True"
        Loaded="OnLoaded"
        SizeChanged="OnSizeChanged"
        AutomationProperties.Name="{loc:Loc hud.title}">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <DropShadowEffect x:Key="HudShadow"
                          Color="#66000000"
                          ShadowDepth="0"
                          BlurRadius="24"
                          Opacity="0.9" />

        <Style x:Key="HudDismissButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Focusable" Value="False" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#33181818" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#55202020" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource Brush.HudBackground}"
            CornerRadius="14"
            Padding="16"
            Effect="{StaticResource HudShadow}">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Text="{loc:Loc hud.title}"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource Brush.HudTextPrimary}"
                       Margin="4,0,4,12"
                       Visibility="{Binding HasResults, Converter={StaticResource BooleanToVisibilityConverter}}" />

            <Border Grid.Row="1"
                    CornerRadius="10"
                    Background="{DynamicResource Brush.HudCardBorder}"
                    Padding="0"
                    Visibility="{Binding HasResults, Converter={StaticResource BooleanToVisibilityConverter}}">
                <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled" MaxHeight="420" AutomationProperties.LiveSetting="Polite" AutomationProperties.Name="{loc:Loc hud.automation.name}" AutomationProperties.HelpText="{loc:Loc hud.automation.help}">
                    <ItemsControl ItemsSource="{Binding Results}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type viewModels:FloatingResultViewModel}">
                                <Border Background="{DynamicResource Brush.HudCardBackground}"
                                        CornerRadius="10"
                                        Padding="12"
                                        Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="0"
                                                   Text="{Binding DisplayName}"
                                                   FontWeight="SemiBold"
                                                   Foreground="{DynamicResource Brush.HudTextPrimary}"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="0,0,24,2" />

                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="0"
                                                   Foreground="{DynamicResource Brush.HudTextSecondary}"
                                                   Text="{Binding Subtitle}"
                                                   FontSize="12"
                                                   TextTrimming="CharacterEllipsis"
                                                   Margin="0,0,24,4">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                    <Style.Triggers>
                                                        <Trigger Property="Text" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </Trigger>
                                                        <Trigger Property="Text" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <TextBlock Grid.Row="2"
                                                   Grid.Column="0"
                                                   Foreground="{Binding StatusBrush}"
                                                   Text="{Binding StatusText}"
                                                   FontSize="12"
                                                   Margin="0,0,24,4" />

                                        <TextBlock Grid.Row="2"
                                                   Grid.Column="0"
                                                   Foreground="{DynamicResource Brush.HudTextSecondary}"
                                                   Text="{Binding SizeSummary}"
                                                   FontSize="12"
                                                   Margin="0,18,24,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                    <Style.Triggers>
                                                        <Trigger Property="Text" Value="">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </Trigger>
                                                        <Trigger Property="Text" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <ProgressBar Grid.Row="2"
                                                     Grid.Column="0"
                                                     Height="4"
                                                     Margin="0,24,24,0"
                                                     VerticalAlignment="Top"
                                                     Value="{Binding Progress, Mode=OneWay}"
                                                     Maximum="100"
                                                     Foreground="{DynamicResource Brush.HudProgress}"
                                                     Background="{DynamicResource Brush.HudProgressBackground}"
                                                     Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                        <Button Grid.Row="0"
                                                Grid.Column="1"
                                                Grid.RowSpan="3"
                                                Width="24"
                                                Height="24"
                                                Margin="0,0,0,0"
                                                Padding="0"
                                                Command="{Binding DismissCommand}"
                                                Style="{StaticResource HudDismissButtonStyle}">
                                            <Path Data="M5,5 L11,11 M11,5 L5,11"
                                                  Stroke="#F0F0F0"
                                                  StrokeThickness="1.5"
                                                  StrokeStartLineCap="Round"
                                                  StrokeEndLineCap="Round" />
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <Border Grid.Row="1" Padding="12" Background="{DynamicResource Brush.HudCardBorder}" CornerRadius="10">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding HasResults}" Value="False">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <StackPanel>
                    <TextBlock Text="{loc:Loc hud.empty.title}" Foreground="{DynamicResource Brush.HudTextPrimary}" FontWeight="SemiBold" />
                    <TextBlock Text="{loc:Loc hud.empty.description}" Foreground="{DynamicResource Brush.HudTextSecondary}" TextWrapping="Wrap" Margin="0,4,0,0" FontSize="12" />
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
