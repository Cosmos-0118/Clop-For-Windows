<Window x:Class="ClopWindows.App.Views.Dialogs.ShortcutCaptureDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Set shortcut"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False"
        PreviewKeyDown="OnPreviewKeyDown">
    <Border Background="#FFFFFF" Padding="24">
        <StackPanel>
            <TextBlock Text="Press the keys you want to use" FontSize="16" FontWeight="SemiBold" Foreground="#1D2939"/>
            <TextBlock x:Name="ScopeText" Margin="0,8,0,0" Foreground="#475467"/>

            <Border Margin="0,16,0,0" Background="#F8F9FC" BorderBrush="#D0D5DD" BorderThickness="1" CornerRadius="8" Padding="12">
                <StackPanel>
                    <TextBlock x:Name="CurrentText" Foreground="#344054"/>
                    <TextBlock x:Name="DefaultText" Margin="0,4,0,0" Foreground="#667085"/>
                    <TextBlock Text="Press Esc to cancel." Margin="0,8,0,0" Foreground="#98A2B3" FontSize="12"/>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
                <Button Content="Disable" Padding="16,6" Click="OnDisableClick"/>
                <Button Content="Cancel" Padding="16,6" Click="OnCancelClick" Margin="8,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
