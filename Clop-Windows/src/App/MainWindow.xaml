<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="ClopWindows.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:loc="clr-namespace:ClopWindows.App.Localization"
    Title="Clop for Windows"
        Width="980"
        Height="640"
        MinWidth="820"
        MinHeight="520"
    Background="{DynamicResource Brush.WindowBackground}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Background="{DynamicResource Brush.NavigationBackground}"
                Padding="24"
                BorderBrush="{DynamicResource Brush.NavigationBorder}"
                BorderThickness="0,0,1,0">
            <Grid>
                <Border Background="{DynamicResource Brush.NavigationAccentGlow}"
                        CornerRadius="24"
                        Opacity="0.35"
                        Margin="-12"/>
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top">
                        <TextBlock Text="{loc:Loc app.name}" FontSize="26" FontWeight="Bold" Foreground="{DynamicResource Brush.NavigationTitle}"/>
                        <TextBlock Text="{loc:Loc app.tagline}" FontSize="12" Foreground="{DynamicResource Brush.NavigationSubtitle}" Margin="0,4,0,24" TextWrapping="Wrap"/>
                        <Border Background="{DynamicResource Brush.NavigationBorder}" Height="1" Opacity="0.5" CornerRadius="1"/>
                        <TextBlock Text="{loc:Loc navigation.section.label}" FontSize="11" FontWeight="SemiBold" Foreground="{DynamicResource Brush.NavigationSubtitle}" Margin="0,18,0,6" TextWrapping="Wrap" TextOptions.TextFormattingMode="Ideal"/>
                    </StackPanel>

                    <ListBox ItemsSource="{Binding NavigationItems}"
                             SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                             BorderThickness="0"
                             Background="Transparent"
                             Foreground="{DynamicResource Brush.NavigationTitle}"
                             HorizontalContentAlignment="Stretch"
                             Margin="0,8,0,0"
                             ScrollViewer.VerticalScrollBarVisibility="Hidden"
                             AutomationProperties.HelpText="{loc:Loc navigation.list.help}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}" FontSize="14" FontWeight="SemiBold" Foreground="{DynamicResource Brush.NavigationTitle}"/>
                                    <TextBlock Text="{Binding Subtitle}" FontSize="12" Margin="0,4,0,0" TextWrapping="Wrap">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="{DynamicResource Brush.NavigationSubtitle}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=IsSelected}" Value="True">
                                                        <Setter Property="Foreground" Value="{DynamicResource Brush.NavigationTitle}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Grid>
                                                <Border x:Name="Indicator" Width="4" CornerRadius="4" HorizontalAlignment="Left" Margin="0" Background="{DynamicResource Brush.NavigationIndicator}" Opacity="0"/>
                                                <Border x:Name="Container" Background="Transparent" CornerRadius="12" Margin="8,0,0,8" Padding="12,10">
                                                    <ContentPresenter/>
                                                </Border>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Container" Property="Background" Value="{DynamicResource Brush.NavigationItemHoverBackground}"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Container" Property="Background" Value="{DynamicResource Brush.NavigationItemSelectedBackground}"/>
                                                    <Setter TargetName="Indicator" Property="Opacity" Value="1"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </DockPanel>
            </Grid>
        </Border>

        <Border Grid.Column="1" Margin="0" Background="{DynamicResource Brush.ContentBackground}">
            <ContentControl Content="{Binding CurrentView}"/>
        </Border>
    </Grid>
</Window>
