<Window x:Class="ClopWindows.App.Views.FloatingHud.FloatingHudWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:ClopWindows.App.Localization"
    xmlns:viewModels="clr-namespace:ClopWindows.App.ViewModels"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="Clop Floating HUD"
        AllowsTransparency="False"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        ShowActivated="False"
        Topmost="True"
        MinHeight="180"
        MinWidth="320"
        Width="{Binding WindowWidth, Mode=TwoWay}"
        Height="{Binding WindowHeight, Mode=TwoWay}"
        AutomationProperties.Name="{loc:Loc hud.title}">
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0"
                             GlassFrameThickness="0"
                             CornerRadius="14"
                             ResizeBorderThickness="8"
                             UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <DropShadowEffect x:Key="HudShadow"
                          Color="#16000000"
                          ShadowDepth="0"
                          BlurRadius="32"
                          Opacity="0.9" />

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.HudTextPrimary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Chrome"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Chrome" Property="Background" Value="#14FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Chrome" Property="Background" Value="#1FFFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ToggleIconButtonStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{DynamicResource Brush.HudTextPrimary}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Chrome"
                                Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Chrome" Property="Background" Value="#14FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Chrome" Property="Background" Value="#1FFFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Chrome" Property="Background" Value="#22FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{DynamicResource Brush.HudBackground}"
            CornerRadius="18"
            Padding="0"
            Effect="{StaticResource HudShadow}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid x:Name="TitleBar"
                Grid.Row="0"
                Margin="20,16,20,8"
                MouseLeftButtonDown="OnTitleBarMouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="{loc:Loc hud.title}"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource Brush.HudTextPrimary}"
                               FontSize="13"/>
                    <TextBlock Text="{loc:Loc hud.subtitle}"
                               Margin="0,2,0,0"
                               Foreground="{DynamicResource Brush.HudTextSecondary}"
                               FontSize="11"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource IconButtonStyle}"
                            Content=""
                            Click="OnHideClicked"
                            AutomationProperties.Name="{loc:Loc hud.hide.toggle}"
                            ToolTip="{loc:Loc hud.hide.tooltip}"/>
                </StackPanel>
            </Grid>

            <Border Grid.Row="1"
                    Margin="20,0,20,12"
                    Padding="4"
                    Background="{DynamicResource Brush.HudCardBorder}"
                    CornerRadius="12">
                <Grid>
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  AutomationProperties.LiveSetting="Polite"
                                  AutomationProperties.Name="{loc:Loc hud.automation.name}"
                                  AutomationProperties.HelpText="{loc:Loc hud.automation.help}"
                                  Visibility="{Binding HasResults, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <ItemsControl x:Name="ResultsItemsControl"
                                      Margin="4"
                                      ItemsSource="{Binding Results}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate DataType="{x:Type viewModels:FloatingResultViewModel}">
                                    <Border x:Name="ResultCard"
                                            Background="{DynamicResource Brush.HudCardBackground}"
                                            BorderBrush="{DynamicResource Brush.HudProgressBackground}"
                                            BorderThickness="1"
                                            CornerRadius="10"
                                            Padding="10"
                                            Margin="0,0,0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Orientation="Vertical" Margin="0,0,8,0">
                                                <TextBlock Text="{Binding DisplayName}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource Brush.HudTextPrimary}"/>
                                                <TextBlock Text="{Binding Subtitle}"
                                                           Margin="0,2,0,0"
                                                           Foreground="{DynamicResource Brush.HudTextSecondary}"
                                                           FontSize="11" TextTrimming="CharacterEllipsis">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="Text" Value="">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </Trigger>
                                                                <Trigger Property="Text" Value="{x:Null}">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0" VerticalAlignment="Center">
                                                    <Ellipse Width="6" Height="6" Fill="{Binding StatusBrush}"/>
                                                    <TextBlock Text="{Binding StatusText}"
                                                               Margin="6,0,0,0"
                                                               FontSize="11"
                                                               Foreground="{DynamicResource Brush.HudTextSecondary}"/>
                                                </StackPanel>
                                                <ProgressBar Margin="0,10,12,0"
                                                             Height="3"
                                                             Value="{Binding Progress, Mode=OneWay}"
                                                             Maximum="100"
                                                             Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                             Foreground="{DynamicResource Brush.HudProgress}"
                                                             Background="{DynamicResource Brush.HudProgressBackground}"/>
                                            </StackPanel>
                                            <Button Grid.Column="1"
                                                    Width="26"
                                                    Height="26"
                                                    Command="{Binding DismissCommand}"
                                                    Style="{StaticResource IconButtonStyle}">
                                                <Button.Content>
                                                    <TextBlock Text="" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Button.Content>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <StackPanel HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="20"
                                MaxWidth="260">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasResults}" Value="False">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="{loc:Loc hud.empty.title}" FontSize="13" FontWeight="SemiBold" Foreground="{DynamicResource Brush.HudTextPrimary}" TextAlignment="Center"/>
                        <TextBlock Text="{loc:Loc hud.empty.description}"
                                   Margin="0,4,0,0"
                                   TextWrapping="Wrap"
                                   FontSize="11"
                                   Foreground="{DynamicResource Brush.HudTextSecondary}"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>

            <ResizeGrip Grid.Row="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,0,14,14"/>
        </Grid>
    </Border>
</Window>
