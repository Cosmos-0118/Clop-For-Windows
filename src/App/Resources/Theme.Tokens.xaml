<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <!-- Core palette -->
    <Color x:Key="Color.BlackOnyx">#FF050505</Color>
    <Color x:Key="Color.NeonGreen">#FF4FFFB0</Color>
    <Color x:Key="Color.SignalRed">#FFF45D5D</Color>
    <Color x:Key="Color.EmberOrange">#FFFF8A3D</Color>
    <Color x:Key="Color.RoyalPurple">#FF8C5BFF</Color>
    <Color x:Key="Color.Midnight">#FF0F172A</Color>
    <Color x:Key="Color.Slate">#FF1F2937</Color>
    <Color x:Key="Color.Glass">#CC0B1120</Color>
    <Color x:Key="Color.SoftWhite">#FFF8FAFC</Color>
    <Color x:Key="Color.Plaster">#FFF2F4F7</Color>
    <Color x:Key="Color.WarmGray">#FFEAECF0</Color>
    <Color x:Key="Color.CoolGray">#FFCBD5F5</Color>

    <!-- Typography -->
    <FontFamily x:Key="Font.Display">Segoe UI Variable Display</FontFamily>
    <FontFamily x:Key="Font.Body">Inter, Segoe UI, Arial</FontFamily>
    <sys:Double x:Key="FontSize.Display">24</sys:Double>
    <sys:Double x:Key="FontSize.Title">18</sys:Double>
    <sys:Double x:Key="FontSize.Body">13</sys:Double>

    <!-- Layout tokens -->
    <Thickness x:Key="Spacing.CardPadding">20</Thickness>
    <Thickness x:Key="Spacing.Panel">0,16,0,0</Thickness>
    <Thickness x:Key="Spacing.WindowPadding">14</Thickness>
    <Thickness x:Key="Spacing.SidebarMargin">14,14,10,14</Thickness>
    <Thickness x:Key="Spacing.ContentPadding">24</Thickness>
    <Thickness x:Key="Spacing.Section">0,12,0,12</Thickness>
    <CornerRadius x:Key="Radius.Card">12</CornerRadius>
    <CornerRadius x:Key="Radius.Hud">16</CornerRadius>
    <CornerRadius x:Key="Radius.NavigationCard">22</CornerRadius>
    <CornerRadius x:Key="Radius.ContentCard">18</CornerRadius>
</ResourceDictionary>
