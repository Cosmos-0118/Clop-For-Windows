<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- CheckBox palette for consistent theming -->
    <Color x:Key="Color.Check.Background">#FFFFFFFF</Color>
    <Color x:Key="Color.Check.Border">#FFD0D5DD</Color>
    <Color x:Key="Color.Check.HoverBorder">#FFB4BBC8</Color>
    <Color x:Key="Color.Check.CheckedBackground">#FF4FFFB0</Color>
    <Color x:Key="Color.Check.CheckedBorder">#FF3ED996</Color>
    <Color x:Key="Color.Check.DisabledBackground">#FFF5F6F7</Color>
    <Color x:Key="Color.Check.DisabledBorder">#FFE4E7EC</Color>
    <Color x:Key="Color.Check.DisabledForeground">#FF98A2B3</Color>

    <SolidColorBrush x:Key="Brush.Check.Background" Color="{StaticResource Color.Check.Background}" />
    <SolidColorBrush x:Key="Brush.Check.Border" Color="{StaticResource Color.Check.Border}" />
    <SolidColorBrush x:Key="Brush.Check.HoverBorder" Color="{StaticResource Color.Check.HoverBorder}" />
    <SolidColorBrush x:Key="Brush.Check.CheckedBackground" Color="{StaticResource Color.Check.CheckedBackground}" />
    <SolidColorBrush x:Key="Brush.Check.CheckedBorder" Color="{StaticResource Color.Check.CheckedBorder}" />
    <SolidColorBrush x:Key="Brush.Check.DisabledBackground" Color="{StaticResource Color.Check.DisabledBackground}" />
    <SolidColorBrush x:Key="Brush.Check.DisabledBorder" Color="{StaticResource Color.Check.DisabledBorder}" />
    <SolidColorBrush x:Key="Brush.Check.DisabledForeground" Color="{StaticResource Color.Check.DisabledForeground}" />

    <PathGeometry x:Key="Geometry.CheckMark" Figures="M 2 10 L 7 15 L 18 4" FillRule="Nonzero" />
    <PathGeometry x:Key="Geometry.CheckDash" Figures="M 4 10 L 16 10" FillRule="Nonzero" />

    <Style x:Key="ClopCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{DynamicResource Brush.PrimaryText}" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontFamily" Value="{DynamicResource Font.Body}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Grid x:Name="Root" Background="Transparent">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Border x:Name="Box"
                                Width="20"
                                Height="20"
                                CornerRadius="6"
                                Background="{DynamicResource Brush.Check.Background}"
                                BorderBrush="{DynamicResource Brush.Check.Border}"
                                BorderThickness="1.5">
                            <Border.RenderTransform>
                                <ScaleTransform x:Name="BoxScale" ScaleX="1" ScaleY="1" />
                            </Border.RenderTransform>
                        </Border>
                        <Path x:Name="CheckMark"
                              Grid.Column="0"
                            Data="{StaticResource Geometry.CheckMark}"
                              StrokeThickness="2.2"
                              Stroke="#FF050505"
                              StrokeEndLineCap="Round"
                              StrokeStartLineCap="Round"
                              StrokeLineJoin="Round"
                              Opacity="0"
                              SnapsToDevicePixels="True" />
                        <ContentPresenter Grid.Column="2"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True" />
                        <VisualStateManager.VisualStateGroups>
                            <VisualStateGroup x:Name="CommonStates">
                                <VisualState x:Name="Normal" />
                                <VisualState x:Name="PointerOver">
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="Box"
                                                        Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                        To="{StaticResource Color.Check.HoverBorder}"
                                                        Duration="0:0:0.12" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Pressed">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="BoxScale"
                                                         Storyboard.TargetProperty="ScaleX"
                                                         To="0.96"
                                                         Duration="0:0:0.05" />
                                        <DoubleAnimation Storyboard.TargetName="BoxScale"
                                                         Storyboard.TargetProperty="ScaleY"
                                                         To="0.96"
                                                         Duration="0:0:0.05" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                            <VisualStateGroup x:Name="CheckStates">
                                <VisualState x:Name="Unchecked">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CheckMark"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="0"
                                                         Duration="0:0:0.1" />
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CheckMark"
                                                                       Storyboard.TargetProperty="Data">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Geometry.CheckMark}" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ColorAnimation Storyboard.TargetName="Box"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="{StaticResource Color.Check.Background}"
                                                        Duration="0:0:0.07" />
                                        <ColorAnimation Storyboard.TargetName="Box"
                                                        Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                        To="{StaticResource Color.Check.Border}"
                                                        Duration="0:0:0.07" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Checked">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CheckMark"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.1" />
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CheckMark"
                                                                       Storyboard.TargetProperty="Data">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Geometry.CheckMark}" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ColorAnimation Storyboard.TargetName="Box"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="{StaticResource Color.Check.CheckedBackground}"
                                                        Duration="0:0:0.07" />
                                        <ColorAnimation Storyboard.TargetName="Box"
                                                        Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                        To="{StaticResource Color.Check.CheckedBorder}"
                                                        Duration="0:0:0.07" />
                                    </Storyboard>
                                </VisualState>
                                <VisualState x:Name="Indeterminate">
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetName="CheckMark"
                                                         Storyboard.TargetProperty="Opacity"
                                                         To="1"
                                                         Duration="0:0:0.1" />
                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CheckMark"
                                                                        Storyboard.TargetProperty="Data">
                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource Geometry.CheckDash}" />
                                        </ObjectAnimationUsingKeyFrames>
                                        <ColorAnimation Storyboard.TargetName="Box"
                                                        Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                        To="{StaticResource Color.Check.CheckedBackground}"
                                                        Duration="0:0:0.07" />
                                        <ColorAnimation Storyboard.TargetName="Box"
                                                        Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                        To="{StaticResource Color.Check.CheckedBorder}"
                                                        Duration="0:0:0.07" />
                                    </Storyboard>
                                </VisualState>
                            </VisualStateGroup>
                        </VisualStateManager.VisualStateGroups>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Box" Property="Background" Value="{DynamicResource Brush.Check.DisabledBackground}" />
                            <Setter TargetName="Box" Property="BorderBrush" Value="{DynamicResource Brush.Check.DisabledBorder}" />
                            <Setter Property="Foreground" Value="{DynamicResource Brush.Check.DisabledForeground}" />
                            <Setter TargetName="CheckMark" Property="Stroke" Value="{DynamicResource Brush.Check.DisabledForeground}" />
                            <Setter Property="Cursor" Value="Arrow" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Apply globally -->
    <Style TargetType="CheckBox" BasedOn="{StaticResource ClopCheckBoxStyle}" />
</ResourceDictionary>
